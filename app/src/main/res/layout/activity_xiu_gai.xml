<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".activity.XiuGaiActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_30"
                android:text="修改用户信息"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14" />
            <!--设置用户信息-->
            <LinearLayout
                android:layout_width="@dimen/dp_312"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_24"
                android:background="@drawable/myshap1"
                android:orientation="vertical">
                <!--用户昵称-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:text="用户昵称"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_14" />

                    <EditText
                        android:id="@+id/edit_nicheng"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginEnd="@dimen/dp_20"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:hint="你的益达"
                        android:padding="@dimen/dp_10"
                        android:textColorHint="#999999"
                        android:textSize="@dimen/sp_14" />
                </RelativeLayout>
                <!--用户性别-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:text="用户性别"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_14" />

                    <EditText
                        android:id="@+id/edit_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginEnd="@dimen/dp_20"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:padding="@dimen/dp_10"
                        android:hint="男"
                        android:textColorHint="#999999"
                        android:textSize="@dimen/sp_14" />
                </RelativeLayout>
                <!--出生日期-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:text="出生日期"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_14" />

                    <EditText
                        android:id="@+id/edit_riqik"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginEnd="@dimen/dp_20"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:padding="@dimen/dp_10"
                        android:hint="1996-11-15"
                        android:textColorHint="#999999"
                        android:textSize="@dimen/sp_14" />
                </RelativeLayout>
                <!--手机号-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:text="手机号"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_14" />

                    <EditText
                        android:id="@+id/edit_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginEnd="@dimen/dp_20"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:padding="@dimen/dp_10"
                        android:hint="17689526961"
                        android:textColorHint="#999999"
                        android:textSize="@dimen/sp_14" />
                </RelativeLayout>
                <!--邮箱-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:text="邮箱"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_14" />

                    <EditText
                        android:id="@+id/edit_youxiang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginEnd="@dimen/dp_20"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:padding="@dimen/dp_10"
                        android:hint="1686625458@qq.com"
                        android:textColorHint="#999999"
                        android:textSize="@dimen/sp_14" />
                </RelativeLayout>
            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dp_60"
                android:layout_marginRight="@dimen/dp_60"
                android:layout_marginTop="@dimen/dp_90"
                android:layout_height="wrap_content"
                android:text="确认修改"
                android:id="@+id/btn_xiugai"
                android:background="@drawable/shap_my"
                />
    </LinearLayout>
    </LinearLayout>
</LinearLayout>