<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_21"
        android:gravity="center_horizontal"
        android:id="@+id/yyxq_relativelayout_id"
        android:orientation="horizontal">

        <Button
            android:id="@+id/yyxq_xiangqing"
            android:layout_width="@dimen/dp_50"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="59dp"
            android:background="#fff"
            android:text="详情"
            android:textColor="#333"
            android:textSize="@dimen/sp_16" />

        <Button
            android:id="@+id/yyxq_pinglun"
            android:layout_width="@dimen/dp_50"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/yyxq_xiangqing"
            android:layout_marginLeft="@dimen/dp_105"
            android:layout_marginTop="0dp"
            android:background="#fff"
            android:text="评论"
            android:textColor="#333"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:id="@+id/yyxq_shouqi_img"
            android:layout_width="@dimen/dp_24"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="58dp"
            android:background="@drawable/yyxq_shouqi" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/yyxq_recyclerview"
        android:layout_below="@+id/yyxq_relativelayout_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_24"></android.support.v7.widget.RecyclerView>

    <ImageView
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="27dp"
        android:background="@drawable/yypj_xiepinglun"
        android:id="@+id/yypj_xiepinglun"
        android:visibility="gone"
        />
</RelativeLayout>