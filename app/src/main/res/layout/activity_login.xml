<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.LoginActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/loginbeijing"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_130"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_30"
                android:background="@drawable/logphone"
                android:layout_marginBottom="@dimen/dp_10"
                />
            <EditText
                android:paddingLeft="@dimen/dp_40"
                android:id="@+id/edit_phone"
                android:layout_width="@dimen/dp_280"
                android:layout_height="wrap_content"
                android:hint="手机号"
                android:textSize="@dimen/sp_18"
                android:textColor="#eeeeee"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginHorizontal="@dimen/dp_40"
            >
            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_30"
                android:background="@drawable/logsuo"
                android:layout_marginBottom="@dimen/dp_10"
                />
            <EditText
                android:paddingLeft="@dimen/dp_40"
                android:id="@+id/edit_pwd"
                android:layout_width="@dimen/dp_280"
                android:layout_height="wrap_content"
                android:hint="登录密码"
                android:textSize="@dimen/sp_18"
                android:textColor="#eeeeee"
                />
            <ImageView
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_18"
                android:background="@drawable/logyan"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_40"
                android:layout_marginBottom="@dimen/dp_10"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="快速注册"
                android:id="@+id/text_zhuce"
                android:layout_marginTop="@dimen/dp_20"
                android:textSize="@dimen/sp_14"
                android:textColor="#ffffff"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_40"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_130"
            >
            <Button
                android:layout_width="@dimen/dp_280"
                android:layout_height="@dimen/dp_40"
                android:text="登录"
                android:id="@+id/btn_login"
                android:background="@drawable/shape"
                />
            高海波18443865200 2019/5/11 星期六 上午 11:57:50
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_25"
                android:layout_marginTop="@dimen/dp_35"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/dp_90"
                    android:layout_height="@dimen/dp_2"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:layout_marginRight="@dimen/dp_5"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp_7"
                    android:background="#ffffff"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_15"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/dp_10"
                    android:text="第三方账号快速登录"/>

                <View
                    android:layout_width="@dimen/dp_90"
                    android:layout_height="@dimen/dp_2"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp_7"
                    android:background="#ffffff"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_height="@dimen/dp_30">

                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="center"
                    android:id="@+id/log_weixin"
                    android:src="@drawable/logweixin"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>