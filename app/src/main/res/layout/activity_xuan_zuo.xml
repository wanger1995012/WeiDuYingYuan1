<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hotactivity.XuanZuoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_180"
            android:orientation="vertical"
            android:background="@drawable/moviebg">

            <TextView
                android:id="@+id/xuan_yuan_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_24"
                android:textSize="@dimen/sp_14"
                android:layout_marginTop="@dimen/dp_15"
                android:text="666"
                android:textColor="#fff"/>
            <TextView
                android:id="@+id/xuan_yuan_address"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:text="address"
                android:textColor="#fff"/>
            <TextView
                android:id="@+id/xuan_ying_name"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_18"
                android:text="address"
                android:textColor="#fff"/>

            <LinearLayout
                android:layout_width="@dimen/dp_312"
                android:orientation="horizontal"
                android:layout_height="@dimen/dp_26"
                android:layout_marginLeft="@dimen/dp_24"
                android:background="@drawable/toubai"
                >
                <TextView
                    android:id="@+id/begin"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_18"
                    android:text="10.00-"
                    android:textColor="#fff"/>
                <TextView
                    android:id="@+id/end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_18"
                    android:text="10.00"
                    android:textColor="#fff"/>
                <TextView
                    android:id="@+id/ting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_18"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:text="10.00"
                    android:textColor="#fff"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dp_312"
                android:orientation="horizontal"
                android:layout_height="@dimen/dp_26"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_24"
                >
                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:background="@drawable/kx"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_13"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="可选"
                    android:textColor="#fff"/>
                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@drawable/xz"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_13"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="选中"
                    android:textColor="#fff"/>
                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_height="@dimen/dp_20"
                    android:background="@drawable/ys"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_13"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="已售"
                    android:textColor="#fff"/>
                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_height="@dimen/dp_20"
                    android:background="@drawable/zj"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_13"
                    android:text="最佳观影区"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textColor="#fff"/>
            </LinearLayout>

        </LinearLayout>
        <ImageView
            android:layout_width="@dimen/dp_172"
            android:layout_height="@dimen/dp_20"
            android:src="@drawable/xzbg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_150"/>

        <com.bw.movie.view.MoveSeatView
            android:id="@+id/seat_MoveSeatView"
            android:background="#ffffff"
            android:layout_marginTop="@dimen/dp_220"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <LinearLayout
            android:visibility="gone"
            android:clickable="true"
            android:id="@+id/linear_xian"
            android:layout_width="@dimen/dp_312"
            android:background="@drawable/shang_yuan"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_height="@dimen/dp_73">

            <TextView
                android:text="合计:￥"
                android:layout_marginLeft="@dimen/dp_34"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_gravity="center_vertical"
                android:textColor="#333333"/>

            <TextView
                android:id="@+id/price_jia"
                android:layout_width="@dimen/dp_80"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_32"
                android:layout_gravity="center_vertical"
                android:text="0.01"
                android:layout_marginLeft="@dimen/dp_10"
                android:textColor="#b11450"
                />

            <ImageView
                android:id="@+id/image_confirm"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_gravity="center_vertical"
                android:background="@drawable/sure"
                android:layout_marginLeft="@dimen/dp_30"/>

            <ImageView
                android:id="@+id/image_abandon"
                android:layout_width="@dimen/dp_38"
                android:layout_height="@dimen/dp_38"
                android:layout_gravity="center_vertical"
                android:background="@drawable/cha"
                android:layout_marginLeft="@dimen/dp_20"/>

        </LinearLayout>


        <RelativeLayout
            android:visibility="gone"
            android:clickable="true"
            android:background="#fff"
            android:id="@+id/relative_xian_cang"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_178"
            android:layout_alignParentBottom="true">

            <RelativeLayout
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/dp_45"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_90">
                <RadioGroup
                    android:id="@+id/radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <RadioButton
                        android:id="@+id/radio_b1"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_width="wrap_content"
                        android:buttonTint="#666"
                        android:checked="true"
                        android:layout_height="wrap_content"/>
                    <RadioButton
                        android:id="@+id/radio_b2"
                        android:layout_width="wrap_content"
                        android:buttonTint="#666"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"/>
                </RadioGroup>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#666"
                        android:layout_marginTop="@dimen/dp_14"
                        android:layout_marginLeft="@dimen/dp_24"
                        android:textSize="@dimen/sp_16"
                        android:text="选择支付方式"/>
                    <ImageView
                        android:id="@+id/image_yincang"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="@dimen/dp_24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/xia"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:layout_marginLeft="@dimen/dp_24"
                        android:layout_marginTop="@dimen/dp_13"
                        android:background="@drawable/wx"
                        />

                    <TextView
                        android:id="@+id/text_wx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#666"
                        android:layout_marginTop="@dimen/dp_14"
                        android:layout_marginLeft="@dimen/dp_58"
                        android:textSize="@dimen/sp_16"
                        android:text="微信支付"/>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:layout_marginLeft="@dimen/dp_24"
                        android:layout_marginTop="@dimen/dp_13"
                        android:background="@drawable/zfb"
                        />

                    <TextView
                        android:id="@+id/text_zfb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#666"
                        android:layout_marginTop="@dimen/dp_14"
                        android:layout_marginLeft="@dimen/dp_58"
                        android:textSize="@dimen/sp_16"
                        android:text="支付宝支付"/>


                </RelativeLayout>

                <TextView
                    android:id="@+id/text_sum_price"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:text="支付"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="#f66b16"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="@dimen/sp_16" />

            </LinearLayout>
        </RelativeLayout>


    </RelativeLayout>



</RelativeLayout>