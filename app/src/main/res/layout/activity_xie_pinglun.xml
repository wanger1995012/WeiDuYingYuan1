<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.XiePinglunActivity"
    android:orientation="vertical"
    android:background="#fff"
    android:gravity="center"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <EditText
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="@dimen/dp_100"
            android:hint="请您输入要评论的内容"
            android:textColor="#333"
            android:textColorHint="#e5e5e5"
            android:id="@+id/xiepinglun_edit"
            android:background="@drawable/myshap1"
            ></EditText>
        <Button
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:background="@drawable/shap_my"
            android:text="提交"
            android:textColor="#fff"
            android:textSize="@dimen/dp_14"
            android:textStyle="bold"
            android:id="@+id/xiepinglu_btn"
            />
    </LinearLayout>

</LinearLayout>