<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.XiaoxiActivity"
    android:background="#fff"
    android:orientation="vertical"
    android:gravity="center"
    >
    <LinearLayout
        android:layout_width="@dimen/dp_312"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_30"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="系统消息  ("
                android:textSize="@dimen/sp_14"
                android:textColor="#333"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/sp_14"
                android:textColor="#333"
                android:id="@+id/tongzhi_weiduxiaoxi"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="条未读)"
                android:textSize="@dimen/sp_14"
                android:textColor="#333"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <com.jcodecraeer.xrecyclerview.XRecyclerView
                android:id="@+id/tongzhi_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"></com.jcodecraeer.xrecyclerview.XRecyclerView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:background="@drawable/tongzhi_shap"
                >

                <ImageView
                    android:id="@+id/tongzhi_fanhui"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    android:background="@drawable/myxinxifanhui" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>