<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ShowActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager_show"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v4.view.ViewPager>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_12"
            android:id="@+id/radio"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_btn1"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:background="@drawable/select1"
                android:checked="true"
                android:button="@null" />
            <RadioButton
                android:id="@+id/radio_btn2"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:background="@drawable/select2"
                android:layout_marginLeft="@dimen/dp_50"
                android:button="@null" />
            <RadioButton
                android:id="@+id/radio_btn3"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:background="@drawable/select3"
                android:layout_marginLeft="@dimen/dp_50"
                android:button="@null" />
        </RadioGroup>
    </RelativeLayout>
</RelativeLayout>