<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".activity.YiJianActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_30"
            android:text="意见反馈"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14" />
        <EditText
            android:layout_width="@dimen/dp_312"
            android:layout_height="@dimen/dp_64"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_30"
            android:hint="写下您对产品的感受吧！工作人员将会在第一时间评估处理"
            android:textColorHint="#333333"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14"
            android:background="@drawable/myshap1"
            />
        <Button
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_25"
            android:background="@drawable/shap1"
            android:text="提交"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_12"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_gravity="right"
            android:id="@+id/myyijian_tijiao"
            />
        <ImageView
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_gravity="bottom"
            android:layout_marginTop="380dp"
            android:layout_marginLeft="@dimen/dp_24"
            android:background="@drawable/myxinxifanhui"
            android:id="@+id/myyijian_fanhui"
            />
    </LinearLayout>

</LinearLayout>