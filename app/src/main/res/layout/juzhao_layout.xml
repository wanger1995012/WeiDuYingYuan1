<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/simple_draw_view3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        />


    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/layout_xianshi_juzhao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView

            android:layout_marginTop="@dimen/sp_20"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:background="@drawable/xiang"
            android:layout_marginLeft="@dimen/dp_24"/>

        <TextView
            android:id="@+id/text_movie_name3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginStart="@dimen/dp_60"
            android:text="电影名称" />

        <ImageView
            android:id="@+id/image2_dianzan3"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginTop="@dimen/sp_20"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="24dp"
            android:background="@drawable/zanb" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_120"
            android:background="@drawable/shape_raduios">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:text="剧照"
                android:textColor="#333333"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_24"/>
            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_3"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_42"
                android:background="@drawable/shap1" />

            <ImageView
                android:id="@+id/juzhao_yin_cang"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@drawable/xia"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_24"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_60">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/dp_30">

                    <LinearLayout
                        android:layout_width="@dimen/dp_151"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_24"
                        android:orientation="vertical">

                        <com.facebook.drawee.view.SimpleDraweeView
                            fresco:roundedCornerRadius="@dimen/dp_5"
                            android:id="@+id/image_left_ju_zhao1"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_150"
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="@drawable/radius_img"/>

                        <com.facebook.drawee.view.SimpleDraweeView
                            fresco:roundedCornerRadius="@dimen/dp_5"
                            android:id="@+id/image_left_ju_zhao2"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_200"
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="@drawable/radius_img"/>
                        <com.facebook.drawee.view.SimpleDraweeView
                            fresco:roundedCornerRadius="@dimen/dp_5"
                            android:id="@+id/image_left_ju_zhao3"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_170"
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="@drawable/radius_img"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/dp_151"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:orientation="vertical">
                        <com.facebook.drawee.view.SimpleDraweeView
                            fresco:roundedCornerRadius="@dimen/dp_5"
                            android:id="@+id/image_right_ju_zhao1"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_200"
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="@drawable/radius_img"/>

                        <com.facebook.drawee.view.SimpleDraweeView
                            fresco:roundedCornerRadius="@dimen/dp_5"
                            android:id="@+id/image_right_ju_zhao2"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_120"
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="@drawable/radius_img"/>
                        <com.facebook.drawee.view.SimpleDraweeView
                            fresco:roundedCornerRadius="@dimen/dp_5"
                            android:id="@+id/image_right_ju_zhao3"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_200"
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="@drawable/radius_img"/>
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>



        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>