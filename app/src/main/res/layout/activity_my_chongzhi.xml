<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MyChongzhiActivity"
    android:orientation="vertical"
    android:background="#fff"
    android:gravity="center_horizontal"
    >
    <LinearLayout
        android:layout_width="@dimen/dp_272"
        android:layout_height="@dimen/dp_300"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_50"
        android:background="@drawable/shape1"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >

        <RelativeLayout
            android:id="@+id/choongzi1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_10"
                android:text="当前密码"
                android:textColor="#333"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/chongzhi_mima"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_10"
                android:text="123123321"
                android:textColor="#999"
                android:textSize="@dimen/sp_14" />
        </RelativeLayout>
        <!--新密码-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="#333"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:text="重置密码为"
                android:layout_alignParentLeft="true"
                />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="1****1"
                android:ems="6"
                android:textSize="@dimen/sp_14"
                android:textColorHint="#999"
                android:textColor="#999"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_20"
                android:id="@+id/chongzhi_xinmima1"
                />
        </RelativeLayout>
        <!--确认新密码-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="#333"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:text="请再次输入密码"
                android:layout_alignParentLeft="true"
                />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="1****1"
                android:ems="6"
                android:textSize="@dimen/sp_14"
                android:textColorHint="#999"
                android:textColor="#999"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_20"
                android:id="@+id/chongzhi_xinmima2"
                />
        </RelativeLayout>
        <Button
            android:layout_width="@dimen/dp_217"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:text="确认修改密码"
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/chongzhi_queren"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="left"
        >
        <ImageView
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:background="@drawable/myxinxifanhui"
            android:layout_marginTop="@dimen/dp_140"
            android:layout_marginLeft="@dimen/dp_40"
            android:id="@+id/chongzhi_fanhui"
            />
    </LinearLayout>
</LinearLayout>